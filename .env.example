# =============================================================================
# ZUMYGO - WhatsApp Bot Configuration
# =============================================================================
# 
# Copy this file to .env and fill in your values
# 
# This file contains all configuration options for the WhatsApp bot.
# Required variables must be set, optional variables have default values.
# 
# =============================================================================

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Bot Owner (REQUIRED)
# Your WhatsApp phone number without + or country code
# Example: 6281234567890
OWNER=6281234567890

# Command Prefix (REQUIRED)
# Command prefixes to trigger bot commands
# Format: comma-separated or JSON array
# Examples:
#   PREFIX=.,!          # Simple comma-separated
#   PREFIX=["."]        # JSON array with single prefix
#   PREFIX=[".", "!", "/"]  # JSON array with multiple prefixes
PREFIX=.,!

# =============================================================================
# BOT BEHAVIOR
# =============================================================================

# Public Mode
# Enable/disable public access to commands
# true  = All users can use commands
# false = Only owner can use commands (default)
PUBLIC=false

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Pairing Number
# Phone number for pairing (without + or country code)
# Leave empty to use QR code login
# Example: 6281234567890
PAIRING_NUMBER=

# =============================================================================
# DATABASE & LOGGING
# =============================================================================

# Database Path
# SQLite database file path
# Default: session.db
# DATABASE_PATH=session.db

# Log Level
# Set logging level for console output
# Options: DEBUG, INFO, WARN, ERROR
# Default: INFO
LOG_LEVEL=INFO

# =============================================================================
# STATUS FEATURES
# =============================================================================

# Auto-Read Status
# Automatically read WhatsApp status updates
# true  = Enable auto-read status
# false = Disable auto-read status (default)
READ_STATUS=false

# Auto-React Status
# Automatically react to status updates with random emoji
# Note: This only works if READ_STATUS=true
# true  = Enable auto-react status
# false = Disable auto-react status (default)
REACT_STATUS=false

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# 
# Add any additional environment variables your bot needs here
# Example:
# CUSTOM_SETTING=value
# 
# ============================================================================= 